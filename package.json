{
  "name": "@statens-pensjonskasse/biome",
  "version": "2.0.0",
  "description": "Biome is a tool for managing npm packages",
  "type": "module",
  "main": "biome.json",
  "scripts": {
    "check": "biome check",
    "format": "biome format --write",
    "lint": "biome check --write",
    "lint:staged": "biome check --error-on-warnings -no-errors-on-unmatched --staged"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/statens-pensjonskasse/biome.git"
  },
  "keywords": [
    "npm",
    "frontend"
  ],
  "author": "Eivind Ingebrigtsen <eivind.ingebrigtsen@statens-pensjonskasse.no>",
  "license": "ICT",
  "always-auth": true,
  "exports": {
    "./config": "./biome.json"
  },
  "dependencies": {
    "@biomejs/biome": "^2.0.6"
  },
  "optionalDependencies": {
    "@biomejs/cli-linux-x64": "2.0.6"
  },
  "devDependencies": {
    "@types/node": "^24.0.10"
  }
}
